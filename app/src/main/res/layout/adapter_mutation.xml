<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:outlineAmbientShadowColor="@color/cardShadow"
    android:outlineSpotShadowColor="@color/cardShadow"
    android:layout_marginVertical="4dp"
    android:layout_marginHorizontal="8dp">

    <LinearLayout
        android:id="@+id/base_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="14dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="1dp"
            android:layout_gravity="start"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_home_black_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_date_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="400"
                    android:textColor="@color/dialogBackground"
                    tools:text="21-May-2024 16:44" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_transaction_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat_bold"
                    android:textFontWeight="600"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    tools:text="TRANSACTION NAME" />
                <TextView
                    android:id="@+id/tv_debit_credit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="end"
                    android:textSize="14dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textFontWeight="400"
                    android:textColor="@color/black"
                    tools:text="Rp. 2.000,00" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="9dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="400"
                    android:textColor="@color/dialogBackground"
                    tools:text="Account Name" />
                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textSize="9dp"
                    android:fontFamily="@font/montserrat"
                    android:textFontWeight="400"
                    android:textColor="@color/dialogBackground"
                    tools:text="Rp. 14.000,00" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:textColor="@color/dialogBackground"
                tools:text="Keterangan" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>