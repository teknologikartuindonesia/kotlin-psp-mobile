<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    android:outlineSpotShadowColor="@color/cardShadow"
    android:outlineAmbientShadowColor="@color/cardShadow"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_transaction_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:textFontWeight="600"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="TRANSACTION NAME" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:textColor="@color/dialogBackground"
                android:text="Nominal" />
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="12dp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:textColor="@color/dialogBackground"
                tools:text="Rp. 200.000,00" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:textSize="12dp"
                android:textColor="@color/dialogBackground"
                android:text="Jumlah Transaksi" />
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="12dp"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="400"
                android:textColor="@color/dialogBackground"
                tools:text="4" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_detail"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat"
            android:background="@drawable/bg_button_blue"
            android:text="Detail"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>