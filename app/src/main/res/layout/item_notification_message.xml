<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    app:cardElevation="10dp"
    android:outlineAmbientShadowColor="@color/cardShadow"
    android:outlineSpotShadowColor="@color/cardShadow"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">
    <LinearLayout
        android:id="@+id/base_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_notif_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/title"
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            tools:text="Title"/>
        <TextView
            android:id="@+id/txt_notif_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:textSize="9dp"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/subtitle"
            tools:text="Long Description"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>