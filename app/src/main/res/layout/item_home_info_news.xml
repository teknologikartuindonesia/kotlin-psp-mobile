<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="10dp"
    android:background="@drawable/ic_home_slider_bg">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_home_info_news"
        android:layout_width="232dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/RoundedSquare"
        android:src="@drawable/info_news_default"/>
    <TextView
        android:id="@+id/txt_home_info_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/txt_home_info_news_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="30 Februari 2022"
        android:textSize="14sp"
        android:textAlignment="center"/>

</LinearLayout>