<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_dialog"
    app:behavior_hideable="true"
    app:behavior_peekHeight="16dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/iv_bank"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:scaleType="fitStart"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_home_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_bank">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/bank_name"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black"
                tools:text="Bank Name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/account_name"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_account_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black"
                tools:text="Account Name" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/admin_fee"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_admin_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black"
                tools:text="Bank Admin" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="@string/account_number"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text=":"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_blue"
                android:letterSpacing="0.1"
                android:fontFamily="@font/montserrat_bold"
                android:textFontWeight="600"
                android:textSize="10dp"
                tools:text="123232323dfdfdfddfdffdf" />

            <ImageView
                android:id="@+id/iv_copy_va"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="4dp"
                android:src="@drawable/ic_copy" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_tutorial"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_button_blue_shadow"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/white"
            android:text="@string/tutorial"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>