<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:outlineAmbientShadowColor="@color/cardShadow"
    android:outlineSpotShadowColor="@color/cardShadow"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <LinearLayout
        android:id="@+id/base_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_margin="14dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginHorizontal="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/subtitle"
                tools:text="April 19, 2023" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                android:text="@string/balance" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginHorizontal="4dp"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_transaction_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="2dp"
                android:textColor="@color/black"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Nama Transaksi" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="right"
                android:paddingLeft="2dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/teal_700"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="Rp.1.000.000" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>